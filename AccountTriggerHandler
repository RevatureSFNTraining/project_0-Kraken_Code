public class AccountTriggerHandler {
    public static void ConnectAccountsToContacts(List<Account> acct){
        List<Contact> conList = new List<Contact>();
        
        Map<Id,Account> acctsWithCons = new Map<Id,Account>(
            [SELECT Id,(SELECT Id FROM Contacts) FROM Account WHERE Id IN :acct]);
        for(Account a : acct) {
            System.debug('acctsWithCons.get(a.Id).Contacts.size()=' + acctsWithCons.get(a.Id).Contacts.size());
            if (acctsWithCons.get(a.Id).Contacts.size() == 0) {
                conList.add(new Contact(LastName=a.Name + ' Contact',
                                           AccountId=a.Id));
            }           
        }
        if (conList.size() > 0) {
            insert conList;
        }
    }
}
